<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OutlineTextView">
        <attr name="ot_innerShadowColor" format="color"/>
        <attr name="ot_innerShadowRadius" format="dimension"/>
        <attr name="ot_innerShadowDx" format="dimension"/>
        <attr name="ot_innerShadowDy" format="dimension"/>

        <attr name="ot_outerShadowColor" format="color"/>
        <attr name="ot_outerShadowRadius" format="dimension"/>
        <attr name="ot_outerShadowDx" format="dimension"/>
        <attr name="ot_outerShadowDy" format="dimension"/>

        <attr name="ot_typeface" format="string" />

        <attr name="ot_foreground" format="reference|color"/>
        <attr name="ot_background" format="reference|color"/>

        <attr name="ot_strokeWidth" format="dimension" />
        <attr name="ot_strokeMiter" format="dimension" />
        <attr name="ot_strokeColor" format="color" />
        <attr name="ot_strokeJoinStyle">
            <enum name="miter" value="0" />
            <enum name="bevel" value="1" />
            <enum name="round" value="2" />
        </attr>
    </declare-styleable>
</resources>